<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="phucht.com.pmusic.UI.PlayerScreen">
    <RelativeLayout
        android:id="@+id/toolbar_container"
        android:background="@color/player_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignStart="@id/dismiss_btn"
            android:layout_alignEnd="@id/playlist_btn"
            android:layout_gravity="center"
            android:text="Music Title"
            android:textSize="@dimen/header_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_height" />
        <ImageButton
            android:layout_alignParentStart="true"
            android:id="@+id/dismiss_btn"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_dismiss"
            android:scaleType="centerInside"
            android:layout_margin="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/playlist_btn"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_playlist"
            android:scaleType="centerInside"
            android:layout_margin="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>


</LinearLayout>
