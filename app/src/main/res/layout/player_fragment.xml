<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/player_background"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="360dp">
    <ImageView
        android:id="@+id/cover"
        android:padding="30dp"
        android:layout_margin="20dp"
        android:layout_marginTop="@dimen/appbar_height"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/placeholder"
        android:layout_width="320dp"
        android:layout_height="320dp" />

</FrameLayout>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.Guideline
            android:id="@+id/gl_1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.constraint.Guideline
            app:layout_constraintGuide_begin="140dp"
            android:orientation="horizontal"
            android:id="@+id/hor_gl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.constraint.Guideline
            android:id="@+id/hor_gl_2"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            app:layout_constraintStart_toEndOf="@id/gl_1"
            app:layout_constraintTop_toBottomOf="@id/hor_gl_1"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_forward"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:rotation="180"
            android:id="@+id/backward"
            android:scaleType="centerInside"/>
        <FrameLayout
            android:id="@+id/play_container"
            app:layout_constraintStart_toEndOf="@id/backward"
            app:layout_constraintEnd_toStartOf="@id/fast_forward"
            app:layout_constraintTop_toBottomOf="@id/hor_gl_2"
            android:background="@drawable/play_btn_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/play"
                android:scaleType="centerInside"
                android:padding="25dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_play" />
        </FrameLayout>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:id="@+id/fast_forward"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_forward"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@id/ver_gl_2"
            app:layout_constraintTop_toBottomOf="@id/hor_gl_1" />
        <android.support.constraint.Guideline
            android:id="@+id/ver_gl_2"
            app:layout_constraintGuide_percent="0.8"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/play_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pass_time_tv"
                android:text="0:00"
                android:textColor="@color/seekbar_background_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"/>
            <SeekBar
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_width="320dp"
                android:maxHeight="20dp"
                android:minHeight="8dp"
                android:layout_height="20dp"
                android:thumb="@drawable/volume_thumb"
                android:id="@+id/seekbar"
                style="@style/TrackSeekbar"/>
            <TextView
                android:id="@+id/etr_time_tv"
                android:text="0:00"
                android:textColor="@color/seekbar_background_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>



    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
</LinearLayout>
